    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to lambda",
            "address": "localhost",
            "port": 9999,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/var/task",
            "protocol": "inspector",
            "stopOnEntry": false
        },
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "webhooks",
            "invokeTarget": {
                "target": "template",
                "templatePath": "${workspaceFolder}/template.yaml",
                "logicalId": "webhooks"
            },
            "lambda": {
                "payload": {},
                "environmentVariables": {}
            }
        }
    ]
}